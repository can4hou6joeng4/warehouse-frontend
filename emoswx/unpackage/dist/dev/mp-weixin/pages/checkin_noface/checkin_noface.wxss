.camera,
.image {
  width: 100%;
  height: 400px;
}
.operate-container {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  margin-top: 50rpx;
}
.operate-container .btn {
  width: 40%;
  margin: 0;
}
.operate-container .btn:first-child {
  margin-right: 30rpx;
}
.notice-container {
  padding: 40rpx 60rpx;
}
.notice-container .notice {
  font-size: 40rpx;
  color: #333;
  font-weight: bold;
  display: block;
  margin-bottom: 15rpx;
}
.notice-container .desc {
  display: block;
  font-size: 32rpx;
  color: #999;
  line-height: 1.6;
}
.checkin-container {
  width: 250rpx;
  height: 250rpx;
  margin: auto;
  -webkit-border-radius: 50%;
          border-radius: 50%;
  border: 25rpx solid #3a75c5;
  margin-top: 50rpx;
}
.checkin-container .content {
  margin-top: 40rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  text-align: center;
}
.checkin-container view {
  margin-top: 10rpx;
}
.checkin-schedule {
  margin-top: 140rpx;
}
.checkin-schedule view {
  font-family: cursive;
  color: #797979;
}
.checkin-top {
  width: 100%;
  height: 300rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  text-align: center;
  margin-top: 80rpx;
}
.checkin-top .image-box {
  width: 25px;
  height: 25px;
  margin: auto;
}
.checkin-top view {
  font-family: cursive;
  font-size: 20px;
  font-weight: 700;
}

